@page
@model AppliedProgrammingTask1.Pages.ItemsPlayModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Summary Page</title>

    <style>
        .main-heading {
            margin-left: 50px;
        }

        .wrapper {
            width: 95%;
            margin-left: 50px;
            height: auto;
            border-style: groove;
        }

            .wrapper .inner {
                width: 70%;
                margin-left: 50px;
                margin-top: 50px;
            }

        .row {
            margin-left: 50px;
        }
    </style>

</head>
<body>
    <hr>
    <h1 class="main-heading">Item Summary </h1>
    <hr>
    <div class="row">
        <a href="/ItemsPlay" class="btn btn-primary">All assigned items.</a>&emsp;&emsp; <a href="/AssignedTotal" class="btn btn-primary">All assigned money.</a>
    </div>
    <br>
    <div class="wrapper">

        <table class="table">
            <caption>assigned Records</caption>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Item</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int val = 0;
                }
                @foreach (var j in Model.getGoods)
                {
                    <tr>
                        <th scope="row">@j.Id</th>
                        <td>@j.goodsSelection</td>
                    </tr>
                    val++;
                }

                <tr>
                    <td colspan="1">All Item</td>
                    <td>@val</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>